<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        android:id="@+id/layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dip"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:scrollbars="horizontal|vertical">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/from_city_column"
                        android:layout_column="0"
                        android:gravity="center"
                        android:layout_width="@+id/departure_city_header"
                        android:padding="10sp"/>

                    <TextView
                        android:id="@+id/departure_time_column"
                        android:layout_column="1"
                        android:layout_width="@+id/departure_time_header"
                        android:gravity="center"
                        android:padding="15sp"/>

                    <TextView
                        android:id="@+id/departure_date_column"
                        android:layout_column="2"
                        android:layout_width="@+id/departure_date_header"
                        android:gravity="center"
                        android:padding="10sp"/>

                    <TextView
                        android:id="@+id/airline_name_column"
                        android:layout_column="3"
                        android:layout_width="@+id/airline_name_header"
                        android:gravity="center"
                        android:padding="10sp"/>

                    <TextView
                        android:id="@+id/flight_number_column"
                        android:layout_column="4"
                        android:layout_width="@+id/flight_number_header"
                        android:gravity="center"
                        android:padding="10sp"/>

                    <TextView
                        android:id="@+id/seat_number_column"
                        android:layout_column="5"
                        android:layout_width="@+id/seat_number_header"
                        android:gravity="center"
                        android:padding="10sp"/>

                    <TextView
                        android:id="@+id/ticket_number_column"
                    android:layout_width="@+id/ticket_number_header"
                        android:layout_column="6"
                        android:gravity="center"
                        android:padding="10sp"/>

                    <TextView
                        android:id="@+id/to_city_column"
                        android:layout_width="@+id/to_city_header"
                        android:layout_column="7"
                        android:gravity="center"
                        android:padding="10sp"/>

                    <TextView
                        android:id="@+id/arrive_time_column"
                        android:layout_width="@+id/arrive_time_header"
                        android:layout_column="8"
                        android:gravity="center"
                        android:padding="10sp"/>
                </TableRow>
            </TableLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
