<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:descendantFocusability="blocksDescendants"
    android:padding="0dp">

    <TextView
        android:id="@+id/profile_from_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingStart="12dp"
        android:paddingLeft="12dp" />

    <TextView
        android:id="@+id/profile_departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_from_city"
        android:layout_alignLeft="@+id/profile_from_city"
        android:layout_below="@+id/profile_from_city"
        android:text=""
        android:paddingStart="12dp"
        android:paddingLeft="12dp"/>


    <ImageView
        android:id="@+id/profile_imageInList"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:rotation="180"
        app:srcCompat="@drawable/ic_flight_primery_right_24dp" />
    <TextView
        android:id="@+id/profile_departure_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_imageInList"
        android:text=""
        android:gravity="center"/>

    <TextView
        android:id="@+id/profile_airline_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_departure_date"
        android:gravity="center"/>

    <TextView
        android:id="@+id/profile_flight_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_departure_date"
        android:layout_toLeftOf="@+id/profile_imageInList"
        android:gravity="center"
        android:layout_toStartOf="@+id/profile_imageInList" />

    <TextView
        android:id="@+id/profile_seat_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_departure_date"
        android:layout_toRightOf="@+id/profile_imageInList"
        android:gravity="center"
        android:layout_toEndOf="@+id/profile_imageInList" />

    <TextView
        android:id="@+id/profile_ticket_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/profile_seat_number"
        android:gravity="center"
        android:layout_toEndOf="@+id/profile_seat_number" />

    <TextView
        android:id="@+id/profile_to_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingEnd="15dp"
        android:paddingRight="15dp" />

    <TextView
        android:id="@+id/profile_arrive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_to_city"
        android:layout_alignLeft="@+id/profile_to_city"
        android:layout_below="@+id/profile_to_city"
        />


</RelativeLayout>